@model IEnumerable<ProductDetials>;
@{
	
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewData["Title"] = "Home Page";
	
}

	<div class="col-sm-10 bg-secondary ">
			<div class="app-main flex-column flex-row-fluid" id="kt_app_main">
				<!--begin::Content wrapper-->
				<div class="d-flex flex-column flex-column-fluid">
					<!--begin::Toolbar-->
					<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
						<!--begin::Toolbar container-->
						<!--end::Toolbar container-->
					</div>
					<!--end::Toolbar-->
					<!--begin::Content-->
					<div id="kt_app_content p-10" class="app-content flex-column-fluid">
						<!--begin::Content container-->
						<div id="kt_app_content_container p-5" class="app-container container-xxl">
							<div class="card">
								<!--begin::Card header-->
								<div class="card-header border-0 pt-6">
									<!--begin::Card title-->
									<div class="card-title">
										<!--begin::Search-->
										<div class="d-flex align-items-center position-relative my-1">
											<!--begin::Svg Icon | path: icons/duotune/general/gen021.svg-->
											<span class="svg-icon svg-icon-1 position-absolute ms-1">
												<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
													<rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="currentColor" />
													<path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="currentColor" />
												</svg>
											</span>
											<!--end::Svg Icon-->
											<input type="text" data-kt-customer-table-filter="search" class="form-control form-control-solid w-250px ps-15" placeholder="Search Customers" />
										</div>
										<!--end::Search-->
									</div>
									<!--begin::Card title-->
									<!--begin::Card toolbar-->
									<div class="card-toolbar">
										<!--begin::Toolbar-->
										<div class="d-flex justify-content-end" data-kt-customer-table-toolbar="base">
											<!--begin::Filter-->
											<div class="w-150px me-3">
												<!--begin::Select2-->
												<form asp-action="ProductDetails" method="post">
													<select class="form-select form-select-solid" name="Id" onchange="this.form.submit()">
												<option></option>
												
														@foreach(var item in Model)
														{
															<option value="@item.Id">@item.ProductName</option>	

														}
													
													</select>
												
												</form>
							
												<!--end::Select2-->
											</div>
											<!--end::Filter-->

											<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal"> إضافة تفاصيل المنتج </button>
											<!--end::Add customer-->
										</div>
										<!--end::Toolbar-->
										<!--begin::Group actions-->
										<div class="d-flex justify-content-end align-items-center d-none" data-kt-customer-table-toolbar="selected">
											<div class="fw-bold me-5">
												<span class="me-2" data-kt-customer-table-select="selected_count"></span>Selected
											</div>
											<button type="button" class="btn btn-danger" data-kt-customer-table-select="delete_selected">Delete Selected</button>
										</div>
										<!--end::Group actions-->
									</div>
									<!--end::Card toolbar-->
								</div>
								<!--end::Card header-->
								<!--begin::Card body-->
								<div class="card-body pt-0">
									<!--begin::Table-->
									<table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_customers_table">
										<!--begin::Table head-->
										<thead>
											<!--begin::Table row-->
											<tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
												<th class="w-10px pe-2">
													<div class="form-check form-check-sm form-check-custom form-check-solid me-3">
														<input class="form-check-input" type="checkbox" data-kt-check="true" data-kt-check-target="#kt_customers_table .form-check-input" value="1" />
													</div>
												</th>
												<th class="min-w-125px text-end" style="font-family:cairo">رقم المنتج </th>
												<th class="min-w-125px text-end" style="font-family:cairo"> اسم المنتج </th>
												<th class="min-w-125px text-end" style="font-family:cairo">الوصف  </th>
												<th class="min-w-125px text-end" style="font-family:cairo">السعر </th>
												<th class="min-w-125px text-end" style="font-family:cairo">الموديل</th>
												<th class="min-w-125px text-end" style="font-family:cairo">اللون</th>
												<th class="min-w-125px text-end" style="font-family:cairo">صورة المنتج</th>
												<th class="min-w-125px text-end" style="font-family:cairo">إجراء </th>

											</tr>
											<!--end::Table row-->
										</thead>
										<!--end::Table head-->
										<!--begin::Table body-->

                                        @foreach (var n in Model)
                                        {


                                            <tbody class="fw-semibold text-gray-600">
                                                <tr v-for="(item, aidx) in Franchies" :key="aidx">
                                                    <!--begin::Checkbox-->
                                                    <td>
                                                        <div class="form-check form-check-sm form-check-custom form-check-solid">
                                                            <input class="form-check-input" type="checkbox" value="1" />
                                                        </div>
                                                    </td>
                                                    <!--end::Checkbox-->
                                                    <!--begin::Name=-->
                                                    <td>

														<a href="#" class="text-gray-600 text-hover-primary mb-1">@n.Id</a>



                                                    </td>
                                                    <!--end::Name=-->
                                                    <!--begin::Email=-->
                                                    <td>
													
												
																<a href="#" class="text-gray-600 text-hover-primary mb-1">@n.ProductName</a>


                                                    </td>
                                                    <!--end::Email=-->
                                                    <!--begin::Status=-->
													<td>
															<p>@n.Description</p>
													</td>
                                                    <td>
                                                        <!--begin::Badges-->
                                                        <p class="badge badge-light-success">@n.Price</p>
                                                        <!--end::Badges-->
                                                    </td>
                                                    <!--end::Status=-->
                                                    <!--begin::IP Address=-->
                                                    <td>
														<p>@n.Model</p>
													</td>
                                                    <!--end::IP Address=-->
                                                    <!--begin::Date=-->
                                                    <td>
														<p>@n.Color</p>
													</td>
                                                    <!--end::Date=-->
                                                    <!--begin::Action=-->
                                                    <!--end::Action=-->
													<td>
														<p>@n.Image</p>
													</td>
													<td>
														<p>@n.Qty</p>
													</td>
											<td>

												<a class="btn-primary btn" asp-route-id="@n.Id" asp-action="EditProducDetailes"><i class="far fa-pen-to-square"></i></a>
												<a asp-action="DeleteProductDetail" asp-route-id="@n.Id" class="btn-danger btn"><i class="far fa-trash-can"></i></a>
											</td>
                                                </tr>






                                            </tbody>

                                        }

										
									
										<!--end::Table body-->
									</table>
									<!--end::Table-->
								</div>
								<!--end::Card body-->
							</div>


							<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
								<div class="modal-dialog">
									<div class="modal-content">
										<div class="modal-header">
											<h5 class="modal-title" id="exampleModalLabel">إضافة منتج جديد</h5>
											<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
										</div>
										<form asp-action="AddProductDetails" method="post">
											<div class="modal-body">
												<div class="row">
													<div class="col-sm-12">
														<label for="proudectname">اسم المنتج</label>
														<input id="ProductName" name="ProductName" type="text" class="form-control col-form-label-sm" />
														<div class="row">
															<div class="col-sm">
                                                                <label for="proudectname">وصف المنتج</label>
                                                                <input id="Description" name="Description" type="text" class="form-control col-form-label-sm" />
																<label for="Price">سعر المنتج</label>
                                                                <input id="Price" name="Price" type="number" class="form-control col-form-label-sm" />
																<label for="Model">موديل المنتج</label>
                                                                <input id="Model" name="Model" type="text" class="form-control col-form-label-sm" />
																<label for="Color">لون المنتج</label>
																<input id="Color" name="Color" type="text" class="form-control col-form-label-sm" />
																<label for="Image"> صورة المنتج</label>
                                                                <input id="Image" name="Image" type="text" class="form-control col-form-label-sm" />
																<label for="Qty"> كمية المنتج</label>
                                                                <input id="Qty" name="Qty" type="number" class="form-control col-form-label-sm" />

															</div>
									
														</div>
													

													</div>
												</div>
											</div>
											<div class="modal-footer">
												<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إغلاق</button>
												<button type="submit" class="btn btn-primary">حفظ </button>
											</div>
										</form>

									</div>
								</div>
							</div>


						</div>
						<!--end::Content container-->
					</div>
					<!--end::Content-->
				</div>

			</div>
		</div>
	</div>





