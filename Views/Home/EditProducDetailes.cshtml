@model ProductDetials
@{
	Layout = "~/Views/Shared/_Layout.cshtml";

	ViewData["Title"] = "Home Page";

}

<div class="col-sm-10 bg-secondary ">
	<div class="app-main flex-column flex-row-fluid" id="kt_app_main">
		<!--begin::Content wrapper-->
		<div class="d-flex flex-column flex-column-fluid">
			<!--begin::Toolbar-->
			<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
				<!--begin::Toolbar container-->
				<!--end::Toolbar container-->
			</div>
			<!--end::Toolbar-->
			<!--begin::Content-->
			<div id="kt_app_content p-10" class="app-content flex-column-fluid">
				<!--begin::Content container-->
				<div id="kt_app_content_container p-5" class="app-container container-xxl">
					<div class="card">
						<!--begin::Card header-->
						<div class="card-header border-0 pt-6">
							<!--begin::Card title-->
							<div class="card-title">
								<!--begin::Search-->
								<!--end::Search-->
							</div>
							<!--begin::Card title-->
							<!--begin::Card toolbar-->
							<div class="card-toolbar">
								<!--begin::Toolbar-->
								<!--end::Toolbar-->
								<!--begin::Group actions-->
							</div>
							<!--end::Card toolbar-->
						</div>
						<!--end::Card header-->
						<!--begin::Card body-->
						<div class="card-body pt-0">
							<form asp-action="UpdateDetails" method="post">
								<!--begin::card-->
								<div class="row">
									<div class="col-sm-6">
										<label for="Id">رقم المنتج</label>
										<input readonly asp-for="@Model.Id" id="Id" name="Id" type="text" class="form-control col-form-label-sm" />
									</div>
									<div class="col-sm-6">
										<label for="Description">وصف المنتج</label>
										<input asp-for="@Model.Description" id="Description" name="Description" type="text" class="form-control col-form-label-sm" />
									</div>
									</div>
									<div class="row">
									<div class="col-sm-6">
										<label for="Price">سعر المنتج</label>
										<input asp-for="@Model.Price" id="Price" name="Price" type="number" class="form-control col-form-label-sm" />
									</div>
									<div class="col-sm-6">
										<label for="Model">مودل المنتج</label>
										<input asp-for="@Model.Model" id="Model" name="Model" type="text" class="form-control col-form-label-sm" />
									</div>
									</div>
								<div class="row">
									<div class="col-sm-6">
										<label for="Qty">كمية المنتج</label>
										<input asp-for="@Model.Qty" id="Qty" name="Qty" type="number" class="form-control col-form-label-sm" />
									</div>
									<div class="col-sm-6">
										<label for="Color">لون المنتج</label>
										<input asp-for="@Model.Color" id="Color" name="Color" type="text" class="form-control col-form-label-sm" />
									</div>
								</div>
								<div class="row">
									<div class="mb-3">
										<label for="formFile" class="form-label">رفع صورة</label>
										<input class="form-control" type="text" id="formFile" asp-for="@Model.Image" name="Image">
									</div>
									</div>
									<div class="row">
										<div class="col">
											<button type="submit" class="btn btn-primary">تحديث البيانات</button>
										</div>
									</div>
							</form>
							<!--end::card-->
						</div>
						<!--end::Card body-->
					</div>


					<!-- Modal -->
					<!-- Button trigger modal -->
					<!-- Modal -->


				</div>
				<!--end::Content container-->
			</div>
			<!--end::Content-->
		</div>

	</div>
</div>
	</div>


